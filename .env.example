# CryptoSmartTrader V2 - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Never commit .env files with real secrets to version control

# ===== API Keys & External Services =====
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude models) 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (optional, for Gemini models)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== Exchange API Credentials =====
# Kraken (primary exchange)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# Binance (optional)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# KuCoin (optional)
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# ===== Notification Services =====
# Slack Bot Token (for alerts)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=your_slack_channel_id

# SendGrid (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===== Database Configuration =====
# PostgreSQL (for production data storage)
DATABASE_URL=postgresql://username:password@localhost:5432/cryptosmarttrader
PGHOST=localhost
PGPORT=5432
PGUSER=cryptotrader
PGPASSWORD=your_secure_password
PGDATABASE=cryptosmarttrader

# ===== Application Configuration =====
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Structured logging format (json, text)
LOG_FORMAT=json

# ===== Security Configuration =====
# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_32_chars_minimum

# API Secret Key (for internal service authentication)
API_SECRET_KEY=your_api_secret_key_here

# HashiCorp Vault (optional, for advanced secret management)
VAULT_URL=https://vault.example.com
VAULT_TOKEN=your_vault_token_here

# ===== Trading Configuration =====
# Trading mode (paper, live)
TRADING_MODE=paper

# Initial portfolio value (USD)
INITIAL_PORTFOLIO_VALUE=100000.0

# Risk tolerance (low, medium, high)
RISK_TOLERANCE=medium

# Maximum daily loss percentage (1-10)
MAX_DAILY_LOSS_PERCENT=5.0

# Maximum drawdown percentage (5-20)
MAX_DRAWDOWN_PERCENT=10.0

# ===== Machine Learning Configuration =====
# Model training frequency (daily, weekly)
MODEL_TRAINING_FREQUENCY=daily

# Feature engineering mode (basic, advanced)
FEATURE_ENGINEERING_MODE=advanced

# Model validation method (cv, holdout, walk_forward)
MODEL_VALIDATION_METHOD=walk_forward

# ===== Performance & Monitoring =====
# Prometheus metrics port
PROMETHEUS_PORT=8000

# Health check port
HEALTH_CHECK_PORT=8001

# Streamlit dashboard port
DASHBOARD_PORT=5000

# Enable profiling (true/false)
ENABLE_PROFILING=false

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# ===== Advanced Features =====
# Enable regime detection (true/false)
ENABLE_REGIME_DETECTION=true

# Enable strategy switching (true/false) 
ENABLE_STRATEGY_SWITCHING=true

# Enable canary deployment (true/false)
ENABLE_CANARY_DEPLOYMENT=true

# Enable backtest parity tracking (true/false)
ENABLE_BACKTEST_PARITY=true

# Target tracking error (basis points)
TARGET_TRACKING_ERROR_BPS=20

# ===== Development & Testing =====
# Test database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/cryptosmarttrader_test

# Mock trading (true/false) - for development only
MOCK_TRADING=true

# Cache TTL seconds
CACHE_TTL_SECONDS=300

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# ===== Replit Specific =====
# Replit automatically provides these - do not change
REPL_ID=your_repl_id
REPL_SLUG=cryptosmarttrader-v2
REPLIT_DB_URL=your_replit_db_url