modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["gcc", "glibcLocales", "libcxx", "libjpeg_turbo", "libpng", "libxcrypt", "libyaml", "ocl-icd", "opencl-headers", "pkg-config", "which", "xsimd", "zip"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleDashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ExecutionPolicyDashboard"

[[workflows.workflow]]
name = "SimpleDashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_dashboard_test.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "ExecutionPolicyDashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_dashboard_test.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3003

[[ports]]
localPort = 8899
externalPort = 4200

[agent]
integrations = ["python_anthropic==1.0.0", "python_sendgrid==1.0.0", "python_gemini==1.0.0", "web_scraper==1.0.0", "python_openai==1.0.0", "python_slack==1.0.0"]
