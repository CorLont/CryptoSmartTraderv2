{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/application.log",
      "maxBytes": 10485760,
      "backupCount": 5
    }
  },
  "loggers": {
    "CryptoSmartTrader": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ],
      "propagate": false
    },
    "StrictConfidenceGate": {
      "level": "INFO",
      "handlers": [
        "console",
        "file"
      ],
      "propagate": false
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": [
      "console"
    ]
  }
}