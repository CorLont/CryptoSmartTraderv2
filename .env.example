# Environment Configuration Template for CryptoSmartTrader V2
# P1 Config & Secrets - Copy to .env and fill with your actual values
# Never commit actual secrets to git!

# === REQUIRED API CREDENTIALS ===
# Kraken Exchange API (Required for production trading)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# OpenAI API (Required for AI analysis features)
OPENAI_API_KEY=your_openai_api_key_here

# === OPTIONAL EXCHANGE APIS ===
# Binance Exchange API (Optional for additional data sources)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Coinbase API (Optional)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here

# === APPLICATION CONFIGURATION ===
# Environment: development, staging, production
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=generate_a_strong_secret_key_here

# === MULTI-SERVICE PORTS ===
# Dashboard port (Streamlit)
DASHBOARD_PORT=5000
# API port (FastAPI)
API_PORT=8001
# Metrics port (Prometheus)
METRICS_PORT=8000

# === DATABASE CONFIGURATION ===
# Use PostgreSQL for production, SQLite for development
DATABASE_URL=postgresql://user:password@localhost:5432/cryptotrader
# DATABASE_URL=sqlite:///cryptotrader.db

# === MONITORING & LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000

# === TRADING CONFIGURATION ===
# Always use paper trading for development/testing
PAPER_TRADING=true
TRADING_ENABLED=false
MAX_POSITION_SIZE=1000
RISK_PERCENTAGE=0.02

# === ML CONFIGURATION ===
# Model training and prediction settings
MODEL_TRAINING_ENABLED=true
AUTO_RETRAIN_ENABLED=true
RETRAIN_INTERVAL_HOURS=24
TORCH_DEVICE=auto

# === SECURITY CONFIGURATION ===
ENCRYPTION_ENABLED=true
JWT_SECRET_KEY=your_jwt_secret_here
TOKEN_EXPIRE_HOURS=24

# === EMAIL NOTIFICATIONS (Optional) ===
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# === SLACK NOTIFICATIONS (Optional) ===
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#crypto-alerts

# === REDIS CONFIGURATION (Optional) ===
REDIS_URL=redis://localhost:6379/0

# === VAULT CONFIGURATION (Optional) ===
VAULT_ENABLED=false
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# === DATA CONFIGURATION ===
DATA_RETENTION_DAYS=30
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=365

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# === CORS CONFIGURATION ===
CORS_ENABLED=true
CORS_ORIGINS=*

# === DEVELOPMENT SETTINGS ===
# Only for development environment
MOCK_EXCHANGES=false
DEMO_MODE=false