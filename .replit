modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["gcc", "glibcLocales", "libcxx", "libjpeg_turbo", "libpng", "libxcrypt", "ocl-icd", "opencl-headers", "pkg-config", "which", "xsimd", "zip"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TestApp"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FixedApp"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ComprehensiveAnalysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UltimateAnalysis"

[[workflows.workflow]]
name = "TestApp"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run test_app_simple.py --server.port 5001"
waitForPort = 5001

[[workflows.workflow]]
name = "FixedApp"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_fixed_all_issues.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "ComprehensiveAnalysis"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run start_comprehensive_analysis.py --server.port 5002"
waitForPort = 5002

[[workflows.workflow]]
name = "UltimateAnalysis"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run ultimate_analysis_dashboard.py --server.port 5003"
waitForPort = 5003

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[agent]
integrations = ["web_scraper==1.0.0"]
