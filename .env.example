# CryptoSmartTrader V2 Environment Configuration
# FASE E - Production deployment settings

# ==============================================
# APPLICATION SETTINGS
# ==============================================
CRYPTOSMARTTRADER_ENVIRONMENT=development
CRYPTOSMARTTRADER_DEBUG=false
CRYPTOSMARTTRADER_APP_NAME="CryptoSmartTrader V2"
CRYPTOSMARTTRADER_APP_VERSION=2.0.0

# Server configuration
CRYPTOSMARTTRADER_HOST=0.0.0.0
CRYPTOSMARTTRADER_PORT=5000
CRYPTOSMARTTRADER_WORKERS=1

# ==============================================
# DATABASE SETTINGS
# ==============================================
# PostgreSQL configuration
CRYPTOSMARTTRADER_DB_POSTGRES_HOST=localhost
CRYPTOSMARTTRADER_DB_POSTGRES_PORT=5432
CRYPTOSMARTTRADER_DB_POSTGRES_USER=cryptotrader
CRYPTOSMARTTRADER_DB_POSTGRES_PASSWORD=your_postgres_password_here
CRYPTOSMARTTRADER_DB_POSTGRES_DATABASE=cryptosmarttrader
CRYPTOSMARTTRADER_DB_POSTGRES_SSL_MODE=prefer

# Redis configuration
CRYPTOSMARTTRADER_DB_REDIS_HOST=localhost
CRYPTOSMARTTRADER_DB_REDIS_PORT=6379
CRYPTOSMARTTRADER_DB_REDIS_PASSWORD=your_redis_password_here
CRYPTOSMARTTRADER_DB_REDIS_DATABASE=0

# ==============================================
# EXCHANGE API SETTINGS
# ==============================================
# Kraken API credentials
CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_API_KEY=your_kraken_api_key_here
CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_SECRET=your_kraken_secret_here
CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_SANDBOX=true

# Exchange connection settings
CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_RATE_LIMIT=10
CRYPTOSMARTTRADER_EXCHANGE_TIMEOUT=30
CRYPTOSMARTTRADER_EXCHANGE_RETRIES=3

# ==============================================
# AI/ML SERVICE SETTINGS
# ==============================================
# OpenAI API configuration
CRYPTOSMARTTRADER_AI_OPENAI_API_KEY=your_openai_api_key_here
CRYPTOSMARTTRADER_AI_OPENAI_MODEL=gpt-4o
CRYPTOSMARTTRADER_AI_OPENAI_TIMEOUT=60

# ML model settings
CRYPTOSMARTTRADER_AI_MODEL_CACHE_TTL=3600
CRYPTOSMARTTRADER_AI_ML_BATCH_SIZE=32
CRYPTOSMARTTRADER_AI_FEATURE_CACHE_SIZE=10000

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Application security
CRYPTOSMARTTRADER_SECURITY_SECRET_KEY=your_secret_key_generate_a_secure_one
CRYPTOSMARTTRADER_SECURITY_JWT_ALGORITHM=HS256
CRYPTOSMARTTRADER_SECURITY_JWT_EXPIRATION=3600

# API security
CRYPTOSMARTTRADER_SECURITY_API_KEY_HEADER=X-API-Key
CRYPTOSMARTTRADER_SECURITY_CORS_ORIGINS=["http://localhost:3000","http://localhost:5000"]

# Rate limiting
CRYPTOSMARTTRADER_SECURITY_RATE_LIMIT_REQUESTS=100
CRYPTOSMARTTRADER_SECURITY_RATE_LIMIT_WINDOW=60

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
# Prometheus metrics
CRYPTOSMARTTRADER_MONITORING_PROMETHEUS_PORT=8000
CRYPTOSMARTTRADER_MONITORING_PROMETHEUS_HOST=0.0.0.0

# Health checks
CRYPTOSMARTTRADER_MONITORING_HEALTH_CHECK_PORT=8001
CRYPTOSMARTTRADER_MONITORING_HEALTH_CHECK_INTERVAL=30

# Logging configuration
CRYPTOSMARTTRADER_MONITORING_LOG_LEVEL=INFO
CRYPTOSMARTTRADER_MONITORING_LOG_FORMAT=json
CRYPTOSMARTTRADER_MONITORING_LOG_FILE=logs/cryptosmarttrader.log

# Alerting
CRYPTOSMARTTRADER_MONITORING_ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
CRYPTOSMARTTRADER_MONITORING_ALERT_EMAIL_ENABLED=false

# ==============================================
# TRADING CONFIGURATION
# ==============================================
# Risk management limits
CRYPTOSMARTTRADER_TRADING_MAX_DAILY_LOSS_USD=5000.0
CRYPTOSMARTTRADER_TRADING_MAX_DAILY_LOSS_PERCENT=5.0
CRYPTOSMARTTRADER_TRADING_MAX_DRAWDOWN_PERCENT=10.0
CRYPTOSMARTTRADER_TRADING_MAX_POSITION_COUNT=10

# Execution settings
CRYPTOSMARTTRADER_TRADING_DEFAULT_ORDER_TIMEOUT=300
CRYPTOSMARTTRADER_TRADING_MAX_SLIPPAGE_BPS=50
CRYPTOSMARTTRADER_TRADING_MIN_ORDER_SIZE_USD=10.0

# Signal processing
CRYPTOSMARTTRADER_TRADING_SIGNAL_TIMEOUT_MINUTES=30
CRYPTOSMARTTRADER_TRADING_MIN_SIGNAL_CONFIDENCE=0.7

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Only for development environment
# CRYPTOSMARTTRADER_ENVIRONMENT=development
# CRYPTOSMARTTRADER_DEBUG=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Production environment overrides
# CRYPTOSMARTTRADER_ENVIRONMENT=production
# CRYPTOSMARTTRADER_DEBUG=false
# CRYPTOSMARTTRADER_MONITORING_LOG_LEVEL=WARNING
# CRYPTOSMARTTRADER_SECURITY_CORS_ORIGINS=["https://your-production-domain.com"]

# ==============================================
# DOCKER SETTINGS
# ==============================================
# Docker-specific environment variables
# CRYPTOSMARTTRADER_DB_POSTGRES_HOST=postgres
# CRYPTOSMARTTRADER_DB_REDIS_HOST=redis

# ==============================================
# SECRETS MANAGEMENT
# ==============================================
# For production, use external secrets management:
# - Kubernetes secrets
# - AWS Secrets Manager
# - Azure Key Vault
# - HashiCorp Vault
# 
# Example using external secrets:
# CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_API_KEY_FILE=/run/secrets/kraken_api_key
# CRYPTOSMARTTRADER_EXCHANGE_KRAKEN_SECRET_FILE=/run/secrets/kraken_secret
# CRYPTOSMARTTRADER_AI_OPENAI_API_KEY_FILE=/run/secrets/openai_api_key