# CryptoSmartTrader V2 Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=CryptoSmartTrader V2
DEBUG_MODE=false
LOG_LEVEL=INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Exchange Settings  
PRIMARY_EXCHANGE=kraken
SUPPORTED_EXCHANGES=kraken,binance,kucoin,huobi

# Data Management
DATA_CACHE_SIZE=1000
CACHE_TTL_MINUTES=15
COIN_REFRESH_INTERVAL=3600

# Agent Configuration
AGENT_WORKER_THREADS=6
SENTIMENT_ANALYSIS_ENABLED=true
ML_PREDICTION_ENABLED=true

# Risk Management
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05

# ML Settings
MODEL_RETRAIN_INTERVAL=86400
PREDICTION_HORIZONS=1h,4h,12h,24h,7d,30d

# Health Monitoring
HEALTH_CHECK_INTERVAL=60
ALERT_THRESHOLD_SCORE=0.7

# Metrics and Monitoring
METRICS_PORT=8000
ENABLE_PROMETHEUS=true

# Vault Integration (Optional)
VAULT_ENABLED=false
VAULT_ADDR=https://vault.example.com
VAULT_TOKEN=your_vault_token_here

# Database (Future PostgreSQL Integration)
DATABASE_URL=postgresql://user:pass@localhost:5432/cryptotrader

# File Paths
DATA_DIRECTORY=data
MODELS_DIRECTORY=models
LOGS_DIRECTORY=logs